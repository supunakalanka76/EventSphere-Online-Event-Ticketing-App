@model IEnumerable<EventSphere.Models.Event>
@{
    ViewBag.Title = "Manage Events";
    Layout = ViewBag.LayoutPath;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-calendar-event"></i> Manage My Events
        </h2>
        <a href="@Url.Action("CreateEvent", "Organizer")" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New Event
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Optional Filter Section -->
    <div class="mb-3">
        <form method="get" action="@Url.Action("ManageEvents", "Organizer")" class="row g-2">
            <div class="col-md-4">
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.CategoryID"
                                    @(Request["categoryId"] == cat.CategoryID.ToString() ? "selected" : "")>
                                @cat.CategoryName
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-filter"></i> Filter
                </button>
            </div>
        </form>
    </div>

    <!-- Events Table -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Event Title</th>
                            <th>Category</th>
                            <th>Venue</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Tickets</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var evt in Model)
                            {
                                <tr>
                                    <!-- Thumbnail -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(evt.EventImage))
                                        {
                                            <img src="@Url.Content(evt.EventImage)" alt="Event Image"
                                                 class="img-thumbnail" style="width: 70px; height: 70px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <img src="~/Content/Images/default-event.png" alt="No Image"
                                                 class="img-thumbnail" style="width: 70px; height: 70px; object-fit: cover;" />
                                        }
                                    </td>

                                    <!-- Title -->
                                    <td class="fw-semibold">@evt.Title</td>
                                    <td>@evt.EventCategory.CategoryName</td>
                                    <td>@evt.Venue.VenueName</td>
                                    <td>@(evt.StartDate.ToString("dd MMM yyyy") ?? "N/A")</td>
                                    <td>@(evt.EndDate.ToString("dd MMM yyyy") ?? "N/A")</td>

                                    <!-- Tickets -->
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @evt.AvailableTickets / @evt.TotalTickets
                                        </span>
                                    </td>

                                    <!-- Status -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(evt.Status))
                                        {
                                            if (evt.Status.Equals("Active", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else if (evt.Status.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">Unknown</span>
                                        }
                                    </td>

                                    <!-- Actions -->
                                    <td class="text-center">
                                        <a href="@Url.Action("EditEvent", "Organizer", new { id = evt.EventID })"
                                           class="btn btn-sm btn-outline-primary me-1" title="Edit Event">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteEvent", "Organizer", new { id = evt.EventID })"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this event?');"
                                           title="Delete Event">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle"></i> No events found.
                                    Click <strong>"Add New Event"</strong> to create one.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("ManageEvents page loaded.");
        });
    </script>
}
