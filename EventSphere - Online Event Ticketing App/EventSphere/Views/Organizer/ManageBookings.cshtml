@model IEnumerable<EventSphere.Models.Booking>
@{
    ViewBag.Title = "Manage Bookings";
    Layout = "~/Views/Shared/_LayoutOrganizer.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-receipt"></i> Manage Bookings
        </h2>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Booking ID</th>
                            <th>Event</th>
                            <th>Customer</th>
                            <th>Tickets</th>
                            <th>Total Amount (LKR)</th>
                            <th>Payment Status</th>
                            <th>Check-In</th>
                            <th>Booking Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                         {
                            foreach (var booking in Model)
                            {
                                <tr>
                                    <td>#@booking.BookingID</td>
                                    <td>@booking.Event?.Title</td>
                                    <td>@booking.User?.FullName</td>
                                    <td>@booking.Quantity</td>
                                    <td>@booking.TotalAmount.ToString("N2")</td>

                                    <td>
                                        @if (booking.PaymentStatus == "Paid" || booking.Payment?.Status == "Completed")
                                         {
                                            <span class="badge bg-success">Paid</span>
                                         }
                                        else if (booking.PaymentStatus == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (booking.PaymentStatus == "Failed")
                                        {
                                            <span class="badge bg-danger">Failed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Unknown</span>
                                        }
                                    </td>

                                    <td>
                                        @if (booking.CheckInStatus == true)
                                         {
                                            <span class="badge bg-success">Checked In</span>
                                         }
                                        else
                                        {
                                            <span class="badge bg-secondary">Not Checked In</span>
                                        }
                                    </td>

                                    <td>
                                        @(booking.BookingDate.HasValue
                                        ? booking.BookingDate.Value.ToString("dd MMM yyyy hh:mm tt")
                                        : "N/A")
                                    </td>
                                </tr>
                            }
                         }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle"></i> No bookings found for your events yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
