@model IEnumerable<EventSphere.Models.Booking>
@{
    ViewBag.Title = "Manage Bookings";
    Layout = ViewBag.LayoutPath;
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-receipt text-primary fs-4"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold text-primary mb-1">Manage Bookings</h2>
                        <p class="text-muted mb-0">View and manage all event bookings</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-filter me-2"></i>Filter
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item filter-option" data-filter="all" href="#">All Bookings</a></li>
                            <li><a class="dropdown-item filter-option" data-filter="paid" href="#">Paid</a></li>
                            <li><a class="dropdown-item filter-option" data-filter="pending" href="#">Pending</a></li>
                            <li><a class="dropdown-item filter-option" data-filter="failed" href="#">Failed</a></li>
                            <li><a class="dropdown-item filter-option" data-filter="checked-in" href="#">Checked In</a></li>
                            <li><a class="dropdown-item filter-option" data-filter="not-checked-in" href="#">Not Checked In</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-2">Total Bookings</h6>
                            <h3 class="fw-bold text-primary mb-0">@Model.Count()</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-receipt text-primary fs-5"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-2">Total Revenue</h6>
                            <h3 class="fw-bold text-success mb-0">LKR @Model.Where(b => b.PaymentStatus == "Completed").Sum(b => b.TotalAmount).ToString("N2")</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-success fs-5"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-2">Checked In</h6>
                            <h3 class="fw-bold text-info mb-0">@Model.Count(b => b.CheckInStatus == true)</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-info fs-5"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-2">Pending Payments</h6>
                            <h3 class="fw-bold text-warning mb-0">@Model.Count(b => b.PaymentStatus == "Pending")</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-5"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Search bookings...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">All Status</option>
                                <option value="paid">Paid</option>
                                <option value="pending">Pending</option>
                                <option value="failed">Failed</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="checkinFilter" class="form-select">
                                <option value="">All Check-in</option>
                                <option value="checked-in">Checked In</option>
                                <option value="not-checked-in">Not Checked In</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="clearFilters" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-x-circle me-2"></i>Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="row">
        <div class="col">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-list-ul me-2"></i>Bookings List
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="bookingsTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="selectAll">
                                        </div>
                                    </th>
                                    <th>Booking ID</th>
                                    <th>Event</th>
                                    <th>Customer</th>
                                    <th>Tickets</th>
                                    <th>Total Amount</th>
                                    <th>Payment Status</th>
                                    <th>Check-In</th>
                                    <th>Booking Date</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var booking in Model)
                                    {
                                        <tr class="booking-row"
                                            data-status="@booking.PaymentStatus?.ToLower()"
                                            data-checkin="@(booking.CheckInStatus == true ? "checked-in" : "not-checked-in")"
                                            data-search="@($"{booking.BookingID} {booking.Event.Title} {booking.User.FullName}")">
                                            <td class="ps-4">
                                                <div class="form-check">
                                                    <input class="form-check-input row-checkbox" type="checkbox" value="@booking.BookingID">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                        <i class="bi bi-ticket-perforated text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-primary">#@booking.BookingID</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@booking.Event.Title</div>
                                                <small class="text-muted">@booking.Event.Venue.VenueName</small>
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@booking.User.FullName</div>
                                                <small class="text-muted">@booking.User.Email</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark border fs-6">@booking.Quantity</span>
                                            </td>
                                            <td>
                                                <div class="fw-bold text-success">LKR @booking.TotalAmount.ToString("N2")</div>
                                            </td>
                                            <td>
                                                @if (booking.PaymentStatus == "Paid" || booking.Payment?.Status == "Completed")
                                                {
                                                    <span class="badge bg-success bg-opacity-20 text-success border border-success">
                                                        <i class="bi bi-check-circle me-1"></i>Paid
                                                    </span>
                                                }
                                                else if (booking.PaymentStatus == "Pending")
                                                {
                                                    <span class="badge bg-warning bg-opacity-20 text-warning border border-warning">
                                                        <i class="bi bi-clock me-1"></i>Pending
                                                    </span>
                                                }
                                                else if (booking.PaymentStatus == "Failed")
                                                {
                                                    <span class="badge bg-danger bg-opacity-20 text-danger border border-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Failed
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-20 text-secondary border border-secondary">
                                                        <i class="bi bi-question-circle me-1"></i>Unknown
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (booking.CheckInStatus == true)
                                                {
                                                    <span class="badge bg-success bg-opacity-20 text-success border border-success">
                                                        <i class="bi bi-check-lg me-1"></i>Checked In
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-20 text-secondary border border-secondary">
                                                        <i class="bi bi-clock me-1"></i>Not Checked In
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-muted small">
                                                    @if (booking.BookingDate.HasValue)
                                                    {
                                                        <div>@booking.BookingDate.Value.ToString("dd MMM yyyy")</div>
                                                        <div>@booking.BookingDate.Value.ToString("hh:mm tt")</div>
                                                    }
                                                    else
                                                    {
                                                        <div>N/A</div>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="#">
                                                                <i class="bi bi-eye me-2"></i>View Details
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="#">
                                                                <i class="bi bi-receipt me-2"></i>View Invoice
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        @if (booking.CheckInStatus != true)
                                                        {
                                                            <li>
                                                                <a class="dropdown-item text-success" href="#">
                                                                    <i class="bi bi-check-lg me-2"></i>Check In
                                                                </a>
                                                            </li>
                                                        }
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#">
                                                                <i class="bi bi-trash me-2"></i>Cancel Booking
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="bi bi-receipt display-4"></i>
                                                <h5 class="mt-3">No bookings found</h5>
                                                <p class="mb-0">There are no bookings for your events yet.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Showing <span id="visibleCount">@Model.Count()</span> of @Model.Count() bookings
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-danger" id="bulkCancelBtn" disabled>
                                <i class="bi bi-trash me-2"></i>Cancel Selected
                            </button>
                            <button class="btn btn-outline-success" id="bulkCheckinBtn" disabled>
                                <i class="bi bi-check-lg me-2"></i>Check In Selected
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const checkinFilter = document.getElementById('checkinFilter');
            const clearFilters = document.getElementById('clearFilters');
            const selectAll = document.getElementById('selectAll');
            const rowCheckboxes = document.querySelectorAll('.row-checkbox');
            const bulkCancelBtn = document.getElementById('bulkCancelBtn');
            const bulkCheckinBtn = document.getElementById('bulkCheckinBtn');
            const exportBtn = document.getElementById('exportBtn');
            const visibleCount = document.getElementById('visibleCount');

            // Filter functionality
            function filterBookings() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;
                const checkinValue = checkinFilter.value;

                let visibleRows = 0;

                document.querySelectorAll('.booking-row').forEach(row => {
                    const searchData = row.getAttribute('data-search').toLowerCase();
                    const status = row.getAttribute('data-status');
                    const checkin = row.getAttribute('data-checkin');

                    const matchesSearch = searchData.includes(searchTerm);
                    const matchesStatus = !statusValue || status === statusValue;
                    const matchesCheckin = !checkinValue || checkin === checkinValue;

                    if (matchesSearch && matchesStatus && matchesCheckin) {
                        row.style.display = '';
                        visibleRows++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                visibleCount.textContent = visibleRows;
            }

            // Event listeners for filtering
            searchInput.addEventListener('input', filterBookings);
            statusFilter.addEventListener('change', filterBookings);
            checkinFilter.addEventListener('change', filterBookings);

            clearFilters.addEventListener('click', function() {
                searchInput.value = '';
                statusFilter.value = '';
                checkinFilter.value = '';
                filterBookings();
            });

            // Select all functionality
            selectAll.addEventListener('change', function() {
                const isChecked = this.checked;
                rowCheckboxes.forEach(checkbox => {
                    checkbox.checked = isChecked;
                });
                updateBulkActions();
            });

            // Individual checkbox changes
            rowCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateBulkActions);
            });

            // Update bulk action buttons
            function updateBulkActions() {
                const checkedBoxes = document.querySelectorAll('.row-checkbox:checked');
                const hasSelection = checkedBoxes.length > 0;

                bulkCancelBtn.disabled = !hasSelection;
                bulkCheckinBtn.disabled = !hasSelection;

                // Update select all checkbox state
                selectAll.checked = checkedBoxes.length === rowCheckboxes.length;
                selectAll.indeterminate = checkedBoxes.length > 0 && checkedBoxes.length < rowCheckboxes.length;
            }

            // Bulk actions
            bulkCancelBtn.addEventListener('click', function() {
                const selectedIds = Array.from(document.querySelectorAll('.row-checkbox:checked'))
                    .map(checkbox => checkbox.value);
                if (selectedIds.length > 0) {
                    if (confirm(`Are you sure you want to cancel ${selectedIds.length} booking(s)?`)) {
                        // Implement bulk cancel logic here
                        console.log('Cancelling bookings:', selectedIds);
                    }
                }
            });

            bulkCheckinBtn.addEventListener('click', function() {
                const selectedIds = Array.from(document.querySelectorAll('.row-checkbox:checked'))
                    .map(checkbox => checkbox.value);
                if (selectedIds.length > 0) {
                    if (confirm(`Check in ${selectedIds.length} booking(s)?`)) {
                        // Implement bulk check-in logic here
                        console.log('Checking in bookings:', selectedIds);
                    }
                }
            });

            // Dropdown filter options
            document.querySelectorAll('.filter-option').forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filter = this.getAttribute('data-filter');

                    switch(filter) {
                        case 'paid':
                            statusFilter.value = 'paid';
                            checkinFilter.value = '';
                            break;
                        case 'pending':
                            statusFilter.value = 'pending';
                            checkinFilter.value = '';
                            break;
                        case 'failed':
                            statusFilter.value = 'failed';
                            checkinFilter.value = '';
                            break;
                        case 'checked-in':
                            statusFilter.value = '';
                            checkinFilter.value = 'checked-in';
                            break;
                        case 'not-checked-in':
                            statusFilter.value = '';
                            checkinFilter.value = 'not-checked-in';
                            break;
                        default:
                            statusFilter.value = '';
                            checkinFilter.value = '';
                    }

                    filterBookings();
                });
            });
        });
    </script>
}