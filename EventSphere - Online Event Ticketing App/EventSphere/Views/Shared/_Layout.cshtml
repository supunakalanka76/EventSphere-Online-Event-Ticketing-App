@using EventSphere.Helpers

@{
    var isLoggedIn = SessionHelper.IsLoggedIn();
    var userName = SessionHelper.GetUserName();
    var userRole = SessionHelper.GetUserRole();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EventSphere</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        footer {
            background-color: #212529;
            color: white;
            padding: 20px 0;
            margin-top: 40px;
        }

        .navbar-brand {
            font-weight: bold;
            letter-spacing: 1px;
        }

        .nav-link.active {
            font-weight: 600;
            color: #0d6efd !important;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">EventSphere</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Title == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Title == "About" ? "active" : "")" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.Title == "Contact" ? "active" : "")" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @userName (@userRole)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Profile</a></li>
                                @if (userRole.ToLower() == "admin")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Admin")">Admin Dashboard</a></li>
                                }
                                else if (userRole.ToLower() == "organizer")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Organizer")">Organizer Dashboard</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">Logout</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Page Content -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - EventSphere | Developed by Supun Akalanka</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    @RenderSection("Scripts", required: false)
</body>
</html>
