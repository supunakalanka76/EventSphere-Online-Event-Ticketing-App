<!-- JavaScript for animations -->
<script>
    // Function to check if element is in viewport
    function isInViewport(element) {
        const rect = element.getBoundingClientRect();
        return (
            rect.top >= 0 &&
            rect.left >= 0 &&
            rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
            rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
    }

    // Function to add animation classes when elements come into view
    function handleScrollAnimations() {
        const animatedElements = document.querySelectorAll('.animate__animated');

        animatedElements.forEach(el => {
            if (isInViewport(el) && !el.classList.contains('animate__fadeIn')) {
                const animationType = el.getAttribute('data-animation') || 'fadeInUp';
                el.classList.add(`animate__${animationType}`);
            }
        });
    }

    // Initialize animations on page load and scroll
    document.addEventListener('DOMContentLoaded', function() {
        handleScrollAnimations();

        window.addEventListener('scroll', function() {
            handleScrollAnimations();
        });

        // Add hover effect to team cards
        const teamCards = document.querySelectorAll('.team-card');
        teamCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>