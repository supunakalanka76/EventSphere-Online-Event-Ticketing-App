@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="fw-bold mb-3">Contact Us</h1>
        <p class="lead mb-0">We’d love to hear from you! Get in touch with EventSphere today.</p>
    </div>
</section>

<!-- Contact Info -->
<section class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100 py-4">
                <i class="bi bi-geo-alt-fill text-primary display-5 mb-3"></i>
                <h5 class="fw-bold">Our Office</h5>
                <p class="text-muted">123 Main Street,<br />Colombo, Sri Lanka</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100 py-4">
                <i class="bi bi-envelope-fill text-success display-5 mb-3"></i>
                <h5 class="fw-bold">Email Us</h5>
                <p class="text-muted">support@eventsphere.com<br />info@eventsphere.com</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100 py-4">
                <i class="bi bi-telephone-fill text-warning display-5 mb-3"></i>
                <h5 class="fw-bold">Call Us</h5>
                <p class="text-muted">+94 71 123 4567<br />+94 77 987 6543</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form -->
<section class="bg-light py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Send Us a Message</h2>
            <p class="text-muted">Have questions or feedback? Fill out the form below and we’ll get back to you soon.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4">
                        <form method="post" action="#">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <input type="text" class="form-control" placeholder="Enter your name" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input type="email" class="form-control" placeholder="Enter your email" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Subject</label>
                                <input type="text" class="form-control" placeholder="Enter subject" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Message</label>
                                <textarea class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Google Map -->
<section class="mt-5">
    <div class="container-fluid px-0">
        <div class="ratio ratio-16x9">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3960.727723931449!2d79.85738497409109!3d6.925572093067085!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ae25959d3ff8f6d%3A0x4f88b2245a1b6f0!2sColombo%20City%20Centre!5e0!3m2!1sen!2slk!4v1697380000000!5m2!1sen!2slk"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
</section>
