@model IEnumerable<EventSphere.Models.Event>
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="fw-bold mb-3">Explore Events</h1>
        <p class="lead mb-0">Discover upcoming events and experiences across Sri Lanka 🎉</p>
    </div>
</section>

<!-- Filter & Search Section -->
<section class="container my-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            @using (Html.BeginForm("Index", "Event", FormMethod.Get))
            {
                <div class="input-group">
                    <select class="form-select" name="categoryId">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories as IEnumerable<EventSphere.Models.EventCategory>)
                        {
                            <option value="@category.CategoryID" @(ViewBag.SelectedCategory == category.CategoryID ? "selected" : "")>
                                @category.CategoryName
                            </option>
                        }
                    </select>
                    <input type="text" name="search" class="form-control" placeholder="Search events..." value="@ViewBag.SearchTerm" />
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Search</button>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }
</section>

<!-- Event Cards Section -->
<section class="container pb-5">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var ev in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <img src="@ev.EventImage" class="card-img-top" alt="@ev.Title" style="height: 220px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold">@ev.Title</h5>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar-event"></i> @ev.StartDate.ToString("MMM dd, yyyy") |
                                <i class="bi bi-geo-alt"></i> @ev.Venue.VenueName
                            </p>
                            <p class="text-muted mb-3">@ev.Description</p>

                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Event", new { id = ev.EventID })" class="btn btn-outline-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-emoji-frown display-3 text-muted"></i>
                <h4 class="text-muted mt-3">No events found.</h4>
            </div>
        }
    </div>
</section>
