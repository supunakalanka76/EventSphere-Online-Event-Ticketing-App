<!-- Confirmation Details -->
<section class="container my-5">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-custom alert-danger animate__animated animate__shakeX">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
        </div>
    }
    else
    {
        <!-- Booking Summary -->
        <div class="summary-card">
            <div class="card-header-custom">
                <h4 class="fw-bold mb-0 text-success">
                    <i class="bi bi-receipt me-2"></i>Booking Summary
                </h4>
            </div>

            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Booking ID</div>
                    <div class="info-value">@Model.BookingID</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Event</div>
                    <div class="info-value">@Model.Event.Title</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Date</div>
                    <div class="info-value">@Model.Event.StartDate.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Venue</div>
                    <div class="info-value">@Model.Event.Venue.VenueName, @Model.Event.Venue.City</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Tickets</div>
                    <div class="info-value">@Model.Quantity</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Booking Date</div>
                    <div class="info-value">
                        @(Model.BookingDate.HasValue
                            ? Model.BookingDate.Value.ToString("MMMM dd, yyyy hh:mm tt")
                            : "N/A")
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Status</div>
                    <div class="info-value">
                        <span class="badge-custom bg-success">Confirmed</span>
                    </div>
                </div>
            </div>

            <!-- Amount Summary -->
            <div class="amount-highlight">
                <div class="amount-label">Final Amount Paid</div>
                <div class="amount-value">LKR @Model.FinalAmount.ToString("N2")</div>
            </div>

            @if (Model.PromotionID != null && Model.Promotion != null)
            {
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="info-item text-center">
                            <div class="info-label text-success">
                                <i class="bi bi-tag-fill me-2"></i>Promotion Applied
                            </div>
                            <div class="info-value">@Model.Promotion.Code</div>
                            <div class="info-label text-success mt-2">Discount</div>
                            <div class="info-value">LKR @(Model.DiscountApplied?.ToString("N2") ?? "0.00")</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Payment Info -->
        <div class="summary-card">
            <div class="card-header-custom">
                <h4 class="fw-bold mb-0 text-primary">
                    <i class="bi bi-credit-card-2-front me-2"></i>Payment Details
                </h4>
            </div>

            @if (Model.Payment != null)
            {
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Invoice Number</div>
                        <div class="info-value">@Model.Payment.InvoiceNumber</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Reference No</div>
                        <div class="info-value">@Model.Payment.ReferenceNo</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Payment Method</div>
                        <div class="info-value">@Model.Payment.PaymentGateway</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Payment Date</div>
                        <div class="info-value">
                            @(Model.Payment.PaymentDate.HasValue
                                ? Model.Payment.PaymentDate.Value.ToString("MMMM dd, yyyy hh:mm tt")
                                : "N/A")
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Amount Paid</div>
                        <div class="info-value">LKR @(Model.Payment.Amount?.ToString("N2") ?? "0.00")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Status</div>
                        <div class="info-value">
                            <span class="badge-custom bg-success">@Model.Payment.Status</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-credit-card display-4 text-muted mb-3"></i>
                    <p class="text-muted">No payment record found.</p>
                </div>
            }
        </div>

        <!-- Loyalty Info -->
        <div class="loyalty-card">
            @if (Model.User != null && Model.User.LoyaltyPoints.HasValue) 
             { 
                <i class="bi bi-stars display-4 mb-3"></i>
                <h4 class="fw-bold mb-3">Loyalty Points Earned!</h4>
                <div class="loyalty-points pulse">+@Model.User.LoyaltyPoints</div>
                <p class="mb-3 opacity-75">You earned points for this booking! Use them for future discounts 🎁</p>
                <a href="@Url.Action("Loyalty", "Account")" class="btn btn-dark btn-custom">
                    <i class="bi bi-gift me-2"></i>View Rewards
                </a>
             }
        </div>

        <!-- Share Section -->
        <div class="share-section">
            <h5 class="fw-bold mb-3"><i class="bi bi-share me-2"></i>Share Your Experience</h5>
            <div class="text-center">
                <a href="#" class="share-btn share-facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="share-btn share-twitter">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" class="share-btn share-whatsapp">
                    <i class="bi bi-whatsapp"></i>
                </a>
                <a href="#" class="share-btn share-instagram">
                    <i class="bi bi-instagram"></i>
                </a>
            </div>
        </div>

        <!-- Ticket Section -->
        <div class="summary-card">
            <div class="card-header-custom">
                <h4 class="fw-bold mb-0 text-danger text-center">
                    <i class="bi bi-ticket-detailed me-2"></i>Your Tickets
                </h4>
            </div>

            <div class="row justify-content-center">
                @if (Model.Tickets != null && Model.Tickets.Any())
                {
                    foreach (var ticket in Model.Tickets)
                    {
                        <div class="col-xl-4 col-lg-6 mb-4">
                            <div class="ticket-card">
                                <div class="ticket-qr">
                                    @if (!string.IsNullOrEmpty(ticket.QRCodeImage))
                                    {
                                        <img src="@ticket.QRCodeImage" alt="QR Code"
                                             class="img-fluid" style="width: 160px; height: 160px;">
                                    }
                                    else
                                    {
                                        <div class="text-muted py-4">
                                            <i class="bi bi-qr-code display-4"></i>
                                            <p class="mt-2">QR Code Missing</p>
                                        </div>
                                    }
                                </div>
                                <div class="ticket-info text-center">
                                    <div class="ticket-number mb-2">@ticket.TicketNumber</div>
                                    <p class="text-muted small mb-0">
                                        Issued: @(ticket.IssueDate.HasValue
                                            ? ticket.IssueDate.Value.ToString("MMMM dd, yyyy")
                                            : "N/A")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-ticket-detailed display-1 text-muted"></i>
                        <h5 class="text-muted mt-3">No tickets found for this booking.</h5>
                    </div>
                }
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-5">
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a href="@Url.Action("MyBookings", "Booking")" class="btn btn-outline-custom btn-custom">
                    <i class="bi bi-list me-2"></i>My Bookings
                </a>
                <a href="@Url.Action("Index", "Event")" class="btn btn-primary-custom btn-custom">
                    <i class="bi bi-calendar-event me-2"></i>Browse More Events
                </a>
                <a href="@Url.Action("DownloadInvoice", "Booking", new { bookingId = Model.BookingID })"
                   class="btn btn-success-custom btn-custom">
                    <i class="bi bi-file-earmark-pdf me-2"></i>Download Invoice
                </a>
            </div>
        </div>
    }
</section>

<!-- Add SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Show success celebration
        setTimeout(() => {
            Swal.fire({
                title: 'Booking Successful! 🎉',
                html: `
                    <div class="text-center">
                        <i class="bi bi-check-circle-fill text-success display-1 mb-3"></i>
                        <p class="mb-2">Your tickets have been confirmed</p>
                        <p class="text-muted small">Check your email for the booking confirmation</p>
                    </div>
                `,
                confirmButtonText: 'View Tickets',
                confirmButtonColor: '#667eea',
                background: '#fff',
                color: '#333',
                timer: 5000,
                timerProgressBar: true
            });
        }, 1000);

        // Add hover effects to cards
        const cards = document.querySelectorAll('.summary-card, .ticket-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Share functionality
        const shareButtons = document.querySelectorAll('.share-btn');
        shareButtons.forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const eventTitle = '@Model.Event.Title';
                const bookingId = '@Model.BookingID';

                let shareUrl = '';
                const platform = this.classList[1].replace('share-', '');
                const shareText = `I just booked tickets for ${eventTitle} (Booking: ${bookingId})! 🎟️`;

                switch(platform) {
                    case 'facebook':
                        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}`;
                        break;
                    case 'twitter':
                        shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}`;
                        break;
                    case 'whatsapp':
                        shareUrl = `https://wa.me/?text=${encodeURIComponent(shareText)}`;
                        break;
                    case 'instagram':
                        // Instagram doesn't support direct sharing, open app
                        shareUrl = `instagram://`;
                        break;
                }

                if (platform !== 'instagram') {
                    window.open(shareUrl, '_blank', 'width=600,height=400');
                } else {
                    Swal.fire({
                        title: 'Share on Instagram',
                        text: 'Open Instagram app to share your booking experience!',
                        icon: 'info',
                        confirmButtonColor: '#667eea'
                    });
                }
            });
        });

        // Button click animations
        const buttons = document.querySelectorAll('.btn-custom');
        buttons.forEach(btn => {
            btn.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });

        // Auto-stop confetti after 5 seconds
        setTimeout(() => {
            const confettiPieces = document.querySelectorAll('.confetti-piece');
            confettiPieces.forEach(piece => {
                piece.style.animation = 'none';
            });
        }, 5000);
    });
</script>