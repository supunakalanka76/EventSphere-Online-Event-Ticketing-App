@model IEnumerable<EventSphere.Models.Booking>
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-dark text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="fw-bold mb-2">Admin Dashboard</h1>
        <p class="lead mb-0">Manage users, events, bookings, and monitor performance insights</p>
    </div>
</section>

<!-- Summary Cards -->
<section class="container mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill text-primary display-5 mb-3"></i>
                    <h4 class="fw-bold">@ViewBag.TotalUsers</h4>
                    <p class="text-muted mb-0">Total Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="bi bi-calendar-event text-success display-5 mb-3"></i>
                    <h4 class="fw-bold">@ViewBag.TotalEvents</h4>
                    <p class="text-muted mb-0">Total Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="bi bi-ticket-perforated text-warning display-5 mb-3"></i>
                    <h4 class="fw-bold">@ViewBag.TotalBookings</h4>
                    <p class="text-muted mb-0">Total Bookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="bi bi-currency-dollar text-danger display-5 mb-3"></i>
                    <h4 class="fw-bold">LKR @ViewBag.TotalRevenue.ToString("N2")</h4>
                    <p class="text-muted mb-0">Total Revenue</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Bookings -->
<section class="container mb-5">
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Bookings</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
             {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Booking ID</th>
                                <th>Event</th>
                                <th>Customer</th>
                                <th>Tickets</th>
                                <th>Total (LKR)</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                             {
                                <tr>
                                    <td>@booking.BookingID</td>
                                    <td>@booking.Event.Title</td>
                                    <td>@booking.User.FullName</td>
                                    <td>@booking.Quantity</td>
                                    <td>@booking.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @(booking.BookingDate.HasValue
                                        ? booking.BookingDate.Value.ToString("dd MMM yyyy")
                                        : "N/A")
                                    </td>
                                    <td>
                                        @if (booking.PaymentStatus == "Paid")
                                         {
                                            <span class="badge bg-success">Paid</span>
                                         }
                                        else if (booking.PaymentStatus == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Failed</span>
                                        }
                                    </td>
                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
             }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-frown display-4 text-muted"></i>
                    <p class="text-muted mt-3 mb-0">No recent bookings found.</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Quick Links -->
<section class="container mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-3">
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-primary w-100 py-3">
                <i class="bi bi-people-fill me-2"></i>Manage Users
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("ManageEvents", "Admin")" class="btn btn-outline-success w-100 py-3">
                <i class="bi bi-calendar-event me-2"></i>Manage Events
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("ManageBookings", "Admin")" class="btn btn-outline-warning w-100 py-3">
                <i class="bi bi-ticket-detailed me-2"></i>Manage Bookings
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Reports", "Admin")" class="btn btn-outline-danger w-100 py-3">
                <i class="bi bi-graph-up-arrow me-2"></i>Reports
            </a>
        </div>
    </div>
</section>
